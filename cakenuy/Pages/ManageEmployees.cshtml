@page
@model cakenuy.Pages.ManageEmployeesModel
@{
    ViewData["Title"] = "Manajemen Karyawan";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-pink text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-users me-2"></i>
                            Manajemen Karyawan
                        </h4>
                        <button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                            <i class="fas fa-plus me-1"></i>
                            Tambah Karyawan
                        </button>
                    </div>
                </div>
                
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <label class="form-label">Filter Status:</label>
                            <select class="form-select" id="statusFilter">
                                <option value="">Semua Status</option>
                                <option value="true">Aktif</option>
                                <option value="false">Nonaktif</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Filter Jabatan:</label>
                            <select class="form-select" id="positionFilter">
                                <option value="">Semua Jabatan</option>
                                @foreach (var position in cakenuy.Models.EmployeePositions.Positions)
                                {
                                    <option value="@position">@position</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Filter Shift:</label>
                            <select class="form-select" id="shiftFilter">
                                <option value="">Semua Shift</option>
                                @foreach (var shift in cakenuy.Models.WorkShifts.Shifts)
                                {
                                    <option value="@shift">@shift</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Cari Karyawan:</label>
                            <input type="text" class="form-control" id="searchInput" placeholder="Nama atau No. HP">
                        </div>
                    </div>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-pink text-white">
                                <div class="card-body text-center">
                                    <h3>@Model.Employees.Count(e => e.IsActive)</h3>
                                    <p class="mb-0">Karyawan Aktif</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-pink-light text-dark">
                                <div class="card-body text-center">
                                    <h3>@Model.Employees.Count(e => !e.IsActive)</h3>
                                    <p class="mb-0">Karyawan Nonaktif</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-pink-gradient text-white">
                                <div class="card-body text-center">
                                    <h3>@Model.Employees.Count()</h3>
                                    <p class="mb-0">Total Karyawan</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-pink-soft text-dark">
                                <div class="card-body text-center">
                                    <h3>@Model.Employees.GroupBy(e => e.Position).Count()</h3>
                                    <p class="mb-0">Jenis Jabatan</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Employee Table -->
                    <div class="table-responsive">
                        <table class="table table-hover" id="employeeTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Nama Lengkap</th>
                                    <th>Jabatan</th>
                                    <th>No. HP</th>
                                    <th>Alamat</th>
                                    <th>Tanggal Masuk</th>
                                    <th>Lama Kerja</th>
                                    <th>Status</th>
                                    <th>Shift Kerja</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.Employees.OrderBy(e => e.Id))
                                {
                                    <tr data-status="@employee.IsActive.ToString().ToLower()" 
                                        data-position="@employee.Position" 
                                        data-shift="@employee.WorkShift"
                                        data-search="@employee.FullName.ToLower() @employee.PhoneNumber">
                                        <td><strong>#@employee.Id.ToString("D3")</strong></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-pink text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                    @employee.FullName.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <strong>@employee.FullName</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-pink-soft text-dark">@employee.Position</span>
                                        </td>
                                        <td>
                                            <a href="tel:@employee.PhoneNumber" class="text-decoration-none">
                                                <i class="fas fa-phone me-1"></i>@employee.PhoneNumber
                                            </a>
                                        </td>
                                        <td>
                                            <small class="text-muted">@employee.Address</small>
                                        </td>
                                        <td>@employee.HireDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <small class="text-pink">@employee.WorkDuration</small>
                                        </td>
                                        <td>
                                            @if (employee.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Nonaktif</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-pink">@employee.WorkShift</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button type="button" class="btn btn-outline-pink" 
                                                        onclick="editEmployee(@employee.Id)" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" 
                                                        onclick="deleteEmployee(@employee.Id, '@employee.FullName')" title="Hapus">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Employees.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Belum ada data karyawan</h5>
                            <p class="text-muted">Klik tombol "Tambah Karyawan" untuk menambah data karyawan baru</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Employee Modal -->
<div class="modal fade" id="addEmployeeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user-plus me-2"></i>
                        Tambah Karyawan Baru
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewEmployee.FullName" class="form-label"></label>
                                <input asp-for="NewEmployee.FullName" class="form-control" placeholder="Masukkan nama lengkap">
                                <span asp-validation-for="NewEmployee.FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewEmployee.Position" class="form-label"></label>
                                <select asp-for="NewEmployee.Position" class="form-select">
                                    <option value="">Pilih Jabatan</option>
                                    @foreach (var position in cakenuy.Models.EmployeePositions.Positions)
                                    {
                                        <option value="@position">@position</option>
                                    }
                                </select>
                                <span asp-validation-for="NewEmployee.Position" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewEmployee.PhoneNumber" class="form-label"></label>
                                <input asp-for="NewEmployee.PhoneNumber" class="form-control" placeholder="08xxxxxxxxxx">
                                <span asp-validation-for="NewEmployee.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewEmployee.HireDate" class="form-label"></label>
                                <input asp-for="NewEmployee.HireDate" class="form-control" type="date">
                                <span asp-validation-for="NewEmployee.HireDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewEmployee.Address" class="form-label"></label>
                        <textarea asp-for="NewEmployee.Address" class="form-control" rows="3" placeholder="Masukkan alamat lengkap"></textarea>
                        <span asp-validation-for="NewEmployee.Address" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewEmployee.WorkShift" class="form-label"></label>
                                <select asp-for="NewEmployee.WorkShift" class="form-select">
                                    <option value="">Pilih Shift Kerja</option>
                                    @foreach (var shift in cakenuy.Models.WorkShifts.Shifts)
                                    {
                                        <option value="@shift">@shift</option>
                                    }
                                </select>
                                <span asp-validation-for="NewEmployee.WorkShift" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Status</label>
                                <div class="form-check form-switch">
                                    <input asp-for="NewEmployee.IsActive" class="form-check-input" type="checkbox" checked>
                                    <label asp-for="NewEmployee.IsActive" class="form-check-label">Aktif</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-pink">
                        <i class="fas fa-save me-1"></i>
                        Simpan Karyawan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Employee Modal -->
<div class="modal fade" id="editEmployeeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="Update" id="editEmployeeForm">
                <input type="hidden" id="editEmployeeId" name="id">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user-edit me-2"></i>
                        Edit Karyawan
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="editEmployeeContent">
                    <!-- Content will be loaded via AJAX -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-pink">
                        <i class="fas fa-save me-1"></i>
                        Update Karyawan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const statusFilter = document.getElementById('statusFilter');
            const positionFilter = document.getElementById('positionFilter');
            const shiftFilter = document.getElementById('shiftFilter');
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('employeeTable');
            const rows = table.querySelectorAll('tbody tr');

            function filterTable() {
                const statusValue = statusFilter.value;
                const positionValue = positionFilter.value;
                const shiftValue = shiftFilter.value;
                const searchValue = searchInput.value.toLowerCase();

                rows.forEach(row => {
                    const status = row.dataset.status;
                    const position = row.dataset.position;
                    const shift = row.dataset.shift;
                    const searchText = row.dataset.search;

                    const statusMatch = !statusValue || status === statusValue;
                    const positionMatch = !positionValue || position === positionValue;
                    const shiftMatch = !shiftValue || shift === shiftValue;
                    const searchMatch = !searchValue || searchText.includes(searchValue);

                    if (statusMatch && positionMatch && shiftMatch && searchMatch) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            statusFilter.addEventListener('change', filterTable);
            positionFilter.addEventListener('change', filterTable);
            shiftFilter.addEventListener('change', filterTable);
            searchInput.addEventListener('input', filterTable);
        });

        // Edit employee function
        function editEmployee(id) {
            fetch(`/ManageEmployees?handler=GetEmployee&id=${id}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('editEmployeeId').value = data.id;
                    document.getElementById('editEmployeeContent').innerHTML = `
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nama Lengkap</label>
                                    <input name="FullName" class="form-control" value="${data.fullName}" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Jabatan</label>
                                    <select name="Position" class="form-select" required>
                                        <option value="Admin" ${data.position === 'Admin' ? 'selected' : ''}>Admin</option>
                                        <option value="Supervisor" ${data.position === 'Supervisor' ? 'selected' : ''}>Supervisor</option>
                                        <option value="Kasir" ${data.position === 'Kasir' ? 'selected' : ''}>Kasir</option>
                                        <option value="Barista" ${data.position === 'Barista' ? 'selected' : ''}>Barista</option>
                                        <option value="Baker" ${data.position === 'Baker' ? 'selected' : ''}>Baker</option>
                                        <option value="Decorator" ${data.position === 'Decorator' ? 'selected' : ''}>Decorator</option>
                                        <option value="Delivery" ${data.position === 'Delivery' ? 'selected' : ''}>Delivery</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">No. HP</label>
                                    <input name="PhoneNumber" class="form-control" value="${data.phoneNumber}" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tanggal Masuk</label>
                                    <input name="HireDate" class="form-control" type="date" value="${data.hireDate.split('T')[0]}" required>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Alamat</label>
                            <textarea name="Address" class="form-control" rows="3" required>${data.address}</textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Shift Kerja</label>
                                    <select name="WorkShift" class="form-select" required>
                                        <option value="Pagi (06:00 - 14:00)" ${data.workShift === 'Pagi (06:00 - 14:00)' ? 'selected' : ''}>Pagi (06:00 - 14:00)</option>
                                        <option value="Siang (14:00 - 22:00)" ${data.workShift === 'Siang (14:00 - 22:00)' ? 'selected' : ''}>Siang (14:00 - 22:00)</option>
                                        <option value="Malam (22:00 - 06:00)" ${data.workShift === 'Malam (22:00 - 06:00)' ? 'selected' : ''}>Malam (22:00 - 06:00)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <div class="form-check form-switch">
                                        <input name="IsActive" class="form-check-input" type="checkbox" ${data.isActive ? 'checked' : ''}>
                                        <label class="form-check-label">Aktif</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    new bootstrap.Modal(document.getElementById('editEmployeeModal')).show();
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat memuat data karyawan');
                });
        }

        // Delete employee function
        function deleteEmployee(id, name) {
            if (confirm(`Apakah Anda yakin ingin menghapus karyawan "${name}"?`)) {
                fetch(`/ManageEmployees?handler=Delete&id=${id}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Terjadi kesalahan saat menghapus karyawan');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat menghapus karyawan');
                });
            }
        }
    </script>
}

