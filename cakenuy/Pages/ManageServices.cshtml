@page
@model cakenuy.Pages.ManageServicesModel
@{
    ViewData["Title"] = "Kelola Layanan";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-pink text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-cogs me-2"></i>
                            Kelola Layanan
                        </h4>
                        <button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                            <i class="fas fa-plus me-1"></i>
                            Tambah Layanan
                        </button>
                    </div>
                </div>
                
                <div class="card-body">
                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-pink text-white">
                                <div class="card-body text-center">
                                    <h3>@Model.Services.Count(s => s.IsActive)</h3>
                                    <p class="mb-0">Layanan Aktif</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-pink-light text-dark">
                                <div class="card-body text-center">
                                    <h3>@Model.Services.Count(s => !s.IsActive)</h3>
                                    <p class="mb-0">Layanan Nonaktif</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-pink-gradient text-white">
                                <div class="card-body text-center">
                                    <h3>@Model.Services.Count()</h3>
                                    <p class="mb-0">Total Layanan</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-pink-soft text-dark">
                                <div class="card-body text-center">
                                    <h3>@Model.Services.Where(s => s.IsActive).Count()</h3>
                                    <p class="mb-0">Siap Digunakan</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Filter Section -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label class="form-label">Filter Status:</label>
                            <select class="form-select" id="statusFilter">
                                <option value="">Semua Status</option>
                                <option value="true">Aktif</option>
                                <option value="false">Nonaktif</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Cari Layanan:</label>
                            <input type="text" class="form-control" id="searchInput" placeholder="Nama layanan">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Urutkan:</label>
                            <select class="form-select" id="sortOrder">
                                <option value="name">Nama A-Z</option>
                                <option value="order">Urutan</option>
                                <option value="status">Status</option>
                                <option value="created">Terbaru</option>
                            </select>
                        </div>
                    </div>

                    <!-- Services Table -->
                    <div class="table-responsive">
                        <table class="table table-hover" id="servicesTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Urutan</th>
                                    <th>Layanan</th>
                                    <th>Deskripsi</th>
                                    <th>Status</th>
                                    <th>Dibuat</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model.Services.OrderBy(s => s.SortOrder))
                                {
                                    <tr data-status="@service.IsActive.ToString().ToLower()" 
                                        data-search="@service.Name.ToLower()"
                                        data-order="@service.SortOrder"
                                        data-created="@service.CreatedAt.ToString("yyyy-MM-dd")">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-pink-soft text-dark me-2">#@service.SortOrder</span>
                                                <div class="sort-handle" style="cursor: move;">
                                                    <i class="fas fa-grip-vertical text-muted"></i>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="service-icon me-3">
                                                    <span class="fs-4">@service.IconDisplay</span>
                                                </div>
                                                <div>
                                                    <strong class="service-name">@service.Name</strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        <span class="badge @service.Color text-white">@service.Color.Replace("bg-", "").ToUpper()</span>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="mb-0 service-description">@service.Description</p>
                                        </td>
                                        <td>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input status-toggle" 
                                                       type="checkbox" 
                                                       @(service.IsActive ? "checked" : "")
                                                       data-service-id="@service.Id"
                                                       onchange="toggleServiceStatus(@service.Id, this.checked)">
                                                <label class="form-check-label">
                                                    @if (service.IsActive)
                                                    {
                                                        <span class="badge bg-success">Aktif</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Nonaktif</span>
                                                    }
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @service.CreatedAt.ToString("dd/MM/yyyy")
                                                <br>
                                                @service.CreatedAt.ToString("HH:mm")
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button type="button" class="btn btn-outline-pink" 
                                                        onclick="editService(@service.Id)" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-info" 
                                                        onclick="previewService(@service.Id)" title="Preview">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" 
                                                        onclick="deleteService(@service.Id, '@service.Name')" title="Hapus">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Services.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-cogs fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Belum ada layanan</h5>
                            <p class="text-muted">Klik tombol "Tambah Layanan" untuk menambah layanan baru</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus me-2"></i>
                        Tambah Layanan Baru
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="NewService.Name" class="form-label"></label>
                                <input asp-for="NewService.Name" class="form-control" placeholder="Contoh: Dine In">
                                <span asp-validation-for="NewService.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="NewService.SortOrder" class="form-label"></label>
                                <input asp-for="NewService.SortOrder" class="form-control" type="number" min="1" value="@(Model.Services.Count() + 1)">
                                <span asp-validation-for="NewService.SortOrder" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="NewService.Description" class="form-label"></label>
                        <textarea asp-for="NewService.Description" class="form-control" rows="3" placeholder="Deskripsi layanan..."></textarea>
                        <span asp-validation-for="NewService.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewService.Icon" class="form-label"></label>
                                <select asp-for="NewService.Icon" class="form-select" id="iconSelect">
                                    <option value="">Pilih Icon</option>
                                    @foreach (var icon in cakenuy.Models.ServiceDefaults.AvailableIcons)
                                    {
                                        <option value="@icon">@icon @icon</option>
                                    }
                                </select>
                                <span asp-validation-for="NewService.Icon" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewService.Color" class="form-label"></label>
                                <select asp-for="NewService.Color" class="form-select">
                                    <option value="">Pilih Warna</option>
                                    @foreach (var color in cakenuy.Models.ServiceDefaults.AvailableColors)
                                    {
                                        <option value="@color.Class">@color.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="NewService.Color" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="NewService.IsActive" class="form-check-input" type="checkbox" checked>
                            <label asp-for="NewService.IsActive" class="form-check-label">Aktifkan layanan</label>
                        </div>
                    </div>

                    <!-- Preview -->
                    <div class="mb-3">
                        <label class="form-label">Preview:</label>
                        <div class="service-preview p-3 border rounded" id="servicePreview">
                            <div class="d-flex align-items-center">
                                <span class="preview-icon fs-4 me-3">üçΩÔ∏è</span>
                                <div>
                                    <strong class="preview-name">Nama Layanan</strong>
                                    <br>
                                    <small class="preview-description text-muted">Deskripsi layanan akan muncul di sini</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-pink">
                        <i class="fas fa-save me-1"></i>
                        Simpan Layanan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Service Modal -->
