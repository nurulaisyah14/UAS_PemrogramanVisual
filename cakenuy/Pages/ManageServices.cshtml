            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filter and search functionality
        document.addEventListener('DOMContentLoaded', function() {
            const statusFilter = document.getElementById('statusFilter');
            const searchInput = document.getElementById('searchInput');
            const sortOrder = document.getElementById('sortOrder');
            const table = document.getElementById('servicesTable');
            const rows = table.querySelectorAll('tbody tr');

            function filterTable() {
                const statusValue = statusFilter.value;
                const searchValue = searchInput.value.toLowerCase();
                const sortValue = sortOrder.value;

                let visibleRows = Array.from(rows).filter(row => {
                    const status = row.dataset.status;
                    const searchText = row.dataset.search;

                    const statusMatch = !statusValue || status === statusValue;
                    const searchMatch = !searchValue || searchText.includes(searchValue);

                    if (statusMatch && searchMatch) {
                        row.style.display = '';
                        return true;
                    } else {
                        row.style.display = 'none';
                        return false;
                    }
                });

                // Sort visible rows
                if (sortValue === 'name') {
                    visibleRows.sort((a, b) => a.dataset.search.localeCompare(b.dataset.search));
                } else if (sortValue === 'order') {
                    visibleRows.sort((a, b) => parseInt(a.dataset.order) - parseInt(b.dataset.order));
                } else if (sortValue === 'created') {
                    visibleRows.sort((a, b) => new Date(b.dataset.created) - new Date(a.dataset.created));
                }

                // Reorder DOM
                const tbody = table.querySelector('tbody');
                visibleRows.forEach(row => tbody.appendChild(row));
            }

            statusFilter.addEventListener('change', filterTable);
            searchInput.addEventListener('input', filterTable);
            sortOrder.addEventListener('change', filterTable);

            // Preview functionality for add modal
            const nameInput = document.querySelector('input[name="NewService.Name"]');
            const descInput = document.querySelector('textarea[name="NewService.Description"]');
            const iconSelect = document.getElementById('iconSelect');
            
            function updatePreview() {
                const previewName = document.querySelector('.preview-name');
                const previewDesc = document.querySelector('.preview-description');
                const previewIcon = document.querySelector('.preview-icon');
                
                previewName.textContent = nameInput.value || 'Nama Layanan';
                previewDesc.textContent = descInput.value || 'Deskripsi layanan akan muncul di sini';
                previewIcon.textContent = iconSelect.value || 'üçΩÔ∏è';
            }

            if (nameInput) nameInput.addEventListener('input', updatePreview);
            if (descInput) descInput.addEventListener('input', updatePreview);
            if (iconSelect) iconSelect.addEventListener('change', updatePreview);
        });

        // Toggle service status
        function toggleServiceStatus(id, isActive) {
            fetch(`/ManageServices?handler=ToggleStatus&id=${id}&isActive=${isActive}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update badge
                    const toggle = document.querySelector(`input[data-service-id="${id}"]`);
                    const label = toggle.nextElementSibling;
                    const badge = label.querySelector('.badge');
                    
                    if (isActive) {
                        badge.className = 'badge bg-success';
                        badge.textContent = 'Aktif';
                    } else {
                        badge.className = 'badge bg-danger';
                        badge.textContent = 'Nonaktif';
                    }
                    
                    // Show success message
                    showToast('Status layanan berhasil diubah!', 'success');
                } else {
                    // Revert toggle
                    toggle.checked = !isActive;
                    showToast('Gagal mengubah status layanan', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Revert toggle
                const toggle = document.querySelector(`input[data-service-id="${id}"]`);
                toggle.checked = !isActive;
                showToast('Terjadi kesalahan', 'error');
            });
        }

        // Edit service function
        function editService(id) {
            fetch(`/ManageServices?handler=GetService&id=${id}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('editServiceId').value = data.id;
                    document.getElementById('editServiceContent').innerHTML = `
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label class="form-label">Nama Layanan</label>
                                    <input name="Name" class="form-control" value="${data.name}" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Urutan</label>
                                    <input name="SortOrder" class="form-control" type="number" value="${data.sortOrder}" required>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Deskripsi</label>
                            <textarea name="Description" class="form-control" rows="3" required>${data.description}</textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Icon</label>
                                    <select name="Icon" class="form-select">
                                        <option value="">Pilih Icon</option>
                                        <option value="üçΩÔ∏è" ${data.icon === 'üçΩÔ∏è' ? 'selected' : ''}>üçΩÔ∏èüçΩÔ∏è</option>
                                        <option value="ü•°" ${data.icon === 'ü•°' ? 'selected' : ''}>ü•° ü•°</option>
                                        <option value="üöö" ${data.icon === 'üöö' ? 'selected' : ''}>üöö üöö</option>
                                        <option value="üì±" ${data.icon === 'üì±' ? 'selected' : ''}>üì± üì±</option>
                                        <option value="üí≥" ${data.icon === 'üí≥' ? 'selected' : ''}>üí≥ üí≥</option>
                                        <option value="üéÇ" ${data.icon === 'üéÇ' ? 'selected' : ''}>üéÇ üéÇ</option>
                                        <option value="üßÅ" ${data.icon === 'üßÅ' ? 'selected' : ''}>üßÅ üßÅ</option>
                                        <option value="‚òï" ${data.icon === '‚òï' ? 'selected' : ''}>‚òï ‚òï</option>
                                        <option value="üç∞" ${data.icon === 'üç∞' ? 'selected' : ''}>üç∞ üç∞</option>
                                        <option value="üéâ" ${data.icon === 'üéâ' ? 'selected' : ''}>üéâ üéâ</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Warna</label>
                                    <select name="Color" class="form-select">
                                        <option value="">Pilih Warna</option>
                                        <option value="bg-pink" ${data.color === 'bg-pink' ? 'selected' : ''}>Pink</option>
                                        <option value="bg-success" ${data.color === 'bg-success' ? 'selected' : ''}>Hijau</option>
                                        <option value="bg-info" ${data.color === 'bg-info' ? 'selected' : ''}>Biru</option>
                                        <option value="bg-warning" ${data.color === 'bg-warning' ? 'selected' : ''}>Kuning</option>
                                        <option value="bg-danger" ${data.color === 'bg-danger' ? 'selected' : ''}>Merah</option>
                                        <option value="bg-purple" ${data.color === 'bg-purple' ? 'selected' : ''}>Ungu</option>
                                        <option value="bg-secondary" ${data.color === 'bg-secondary' ? 'selected' : ''}>Abu-abu</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input name="IsActive" class="form-check-input" type="checkbox" ${data.isActive ? 'checked' : ''}>
                                <label class="form-check-label">Aktifkan layanan</label>
                            </div>
                        </div>
                    `;
                    new bootstrap.Modal(document.getElementById('editServiceModal')).show();
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Terjadi kesalahan saat memuat data layanan', 'error');
                });
        }

        // Preview service function
        function previewService(id) {
            fetch(`/ManageServices?handler=GetService&id=${id}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('previewServiceContent').innerHTML = `
                        <div class="service-preview-card p-4 border rounded ${data.color}">
                            <div class="d-flex align-items-center mb-3">
                                <span class="fs-1 me-3">${data.icon || 'üçΩÔ∏è'}</span>
                                <div>
                                    <h4 class="mb-1 text-white">${data.name}</h4>
                                    <span class="badge bg-light text-dark">Urutan: ${data.sortOrder}</span>
                                </div>
                            </div>
                            <p class="text-white mb-3">${data.description}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge ${data.isActive ? 'bg-success' : 'bg-danger'}">${data.isActive ? 'Aktif' : 'Nonaktif'}</span>
                                <small class="text-white-50">Dibuat: ${new Date(data.createdAt).toLocaleDateString('id-ID')}</small>
                            </div>
                        </div>
                    `;
                    new bootstrap.Modal(document.getElementById('previewServiceModal')).show();
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Terjadi kesalahan saat memuat preview', 'error');
                });
        }

        // Delete service function
        function deleteService(id, name) {
            if (confirm(`Apakah Anda yakin ingin menghapus layanan "${name}"?`)) {
                fetch(`/ManageServices?handler=Delete&id=${id}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        showToast('Gagal menghapus layanan', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Terjadi kesalahan saat menghapus layanan', 'error');
                });
            }
        }

        // Toast notification function
        function showToast(message, type) {
            // Simple toast implementation
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }
    </script>
}

