@page
@model cakenuy.Pages.CartModel
@{
    ViewData["Title"] = "Pesanan";
    // Force browser refresh
    Response.Headers.Add("Cache-Control", "no-cache, no-store, must-revalidate");
    Response.Headers.Add("Pragma", "no-cache");
    Response.Headers.Add("Expires", "0");
}

<div class="container py-4" id="orderContent">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 text-pink mb-3">ðŸ›’ Pesanan</h1>
                <p class="lead text-muted">Pilih layanan dan menu favorit Anda</p>
                <div class="d-flex justify-content-center gap-2 mb-3">
                    <button type="button" class="btn btn-outline-pink" onclick="printOrder()" id="printBtn" style="display: none;">
                        <i class="fas fa-print me-2"></i>
                        Print Pesanan
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="clearOrder()" id="clearBtn" style="display: none;">
                        <i class="fas fa-trash me-2"></i>
                        Bersihkan
                    </button>
                </div>
            </div>

            @if (!Model.AvailableServices.Any())
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <h4>Layanan Tidak Tersedia</h4>
                    <p>Maaf, saat ini tidak ada layanan yang tersedia. Silakan hubungi kami untuk informasi lebih lanjut.</p>
                    <a href="/" class="btn btn-pink">Kembali ke Home</a>
                </div>
            }
            else if (Model.IsOrderCompleted && Model.CompletedOrder != null)
            {
                <!-- Order Success & Receipt -->
                <div class="alert alert-success text-center mb-4">
                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                    <h3>Pesanan Berhasil!</h3>
                    <p class="mb-0">Terima kasih telah memesan di Cakenuy. Pesanan Anda sedang diproses.</p>
                </div>

                <!-- Receipt/Struk Content -->
                <div class="card shadow-lg border-0 mb-4" id="receiptContent">
                    <div class="card-body p-4">
                        <!-- Receipt Header -->
                        <div class="text-center mb-4 pb-3 border-bottom">
                            <h2 class="text-pink mb-2">Cakenuy</h2>
                            <h4 class="mb-1">STRUK PESANAN</h4>
                            <p class="text-muted mb-0">Order #@Model.CompletedOrder.Id.ToString("D6")</p>
                            <small class="text-muted">@DateTime.Now.ToString("dd MMMM yyyy, HH:mm") WIB</small>
                        </div>

                        <div class="row">
                            <!-- Customer Information -->
                            <div class="col-md-6 mb-4">
                                <h5 class="text-pink mb-3 border-bottom pb-2">
                                    <i class="fas fa-user me-2"></i>
                                    INFORMASI PELANGGAN
                                </h5>
                                <div class="receipt-info">
                                    <div class="info-row">
                                        <span class="info-label">Nama:</span>
                                        <span class="info-value">@Model.CompletedOrder.CustomerName</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-label">No. HP:</span>
                                        <span class="info-value">@Model.CompletedOrder.PhoneNumber</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.CompletedOrder.Email))
                                    {
                                        <div class="info-row">
                                            <span class="info-label">Email:</span>
                                            <span class="info-value">@Model.CompletedOrder.Email</span>
                                        </div>
                                    }
                                    <div class="info-row">
                                        <span class="info-label">Layanan:</span>
                                        <span class="info-value">
                                            <span class="service-badge @Model.CompletedOrder.Service?.Color">
                                                @Model.CompletedOrder.Service?.IconDisplay @Model.CompletedOrder.Service?.Name
                                            </span>
                                        </span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.CompletedOrder.DeliveryAddress))
                                    {
                                        <div class="info-row">
                                            <span class="info-label">Alamat:</span>
                                            <span class="info-value">@Model.CompletedOrder.DeliveryAddress</span>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Order Information -->
                            <div class="col-md-6 mb-4">
                                <h5 class="text-pink mb-3 border-bottom pb-2">
                                    <i class="fas fa-info-circle me-2"></i>
                                    INFORMASI PESANAN
                                </h5>
                                <div class="receipt-info">
                                    <div class="info-row">
                                        <span class="info-label">Tanggal Pesan:</span>
                                        <span class="info-value">@Model.CompletedOrder.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-label">Waktu Ambil/Kirim:</span>
                                        <span class="info-value">@Model.CompletedOrder.OrderDateTime.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-label">Status:</span>
                                        <span class="info-value">
                                            <span class="badge @Model.CompletedOrder.StatusColor">@Model.CompletedOrder.StatusDisplay</span>
                                        </span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.CompletedOrder.Notes))
                                    {
                                        <div class="info-row">
                                            <span class="info-label">Catatan:</span>
                                            <span class="info-value">@Model.CompletedOrder.Notes</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Order Items -->
                        <div class="mt-4">
                            <h5 class="text-pink mb-3 border-bottom pb-2">
                                <i class="fas fa-birthday-cake me-2"></i>
                                DETAIL PESANAN
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-borderless receipt-table">
                                    <thead>
                                        <tr class="border-bottom">
                                            <th class="ps-0">MENU</th>
                                            <th class="text-center">QTY</th>
                                            <th class="text-end">HARGA</th>
                                            <th class="text-end pe-0">TOTAL</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.CompletedOrder.OrderItems)
                                        {
                                            <tr>
                                                <td class="ps-0">
                                                    <div>
                                                        <strong>@item.MenuItem?.Name</strong>
                                                        @if (!string.IsNullOrEmpty(item.Notes))
                                                        {
                                                            <br>
                                                            <small class="text-muted">Note: @item.Notes</small>
                                                        }
                                                    </div>
                                                </td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-end">Rp @item.UnitPrice.ToString("N0")</td>
                                                <td class="text-end pe-0"><strong>Rp @item.TotalPrice.ToString("N0")</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Total Section -->
                            <div class="border-top pt-3 mt-3">
                                <div class="row">
                                    <div class="col-8">
                                        <h4 class="mb-0"><strong>TOTAL PESANAN:</strong></h4>
                                    </div>
                                    <div class="col-4 text-end">
                                        <h4 class="mb-0 text-pink"><strong>Rp @Model.CompletedOrder.TotalAmount.ToString("N0")</strong></h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="text-center mt-4 pt-4 border-top">
                            <p class="mb-2"><strong>Terima kasih telah memesan di Cakenuy!</strong></p>
                            <p class="text-muted mb-1">WhatsApp: 0812-3456-7890 | Email: info@cakenuy.com</p>
                            <p class="text-muted mb-0">Simpan struk ini sebagai bukti pesanan</p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="text-center mb-4">
                    <button type="button" class="btn btn-pink btn-lg me-3" onclick="printReceipt()">
                        <i class="fas fa-print me-2"></i>
                        Print Struk
                    </button>
                    <button type="button" class="btn btn-outline-pink btn-lg me-3" onclick="downloadPDF()">
                        <i class="fas fa-file-pdf me-2"></i>
                        Download PDF
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-lg" onclick="newOrder()">
                        <i class="fas fa-plus me-2"></i>
                        Pesan Lagi
                    </button>
                </div>
            }
            else
            {
                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                {
                    <div class="alert alert-danger">
                        @ViewData["ErrorMessage"]
                    </div>
                }
                
                @if (!ModelState.IsValid)
                {
                    <div class="alert alert-warning">
                        <h5>Validation Errors:</h5>
                        <ul>
                            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
                
                <form method="post" id="orderForm">
                    <div class="row">
                        <!-- Service Selection -->
                        <div class="col-lg-8">
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-pink text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-concierge-bell me-2"></i>
                                        Pilih Layanan
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        @foreach (var service in Model.AvailableServices)
                                        {
                                            <div class="col-md-4 mb-3">
                                                <div class="service-option">
                                                    <input type="radio" 
                                                           name="NewOrder.ServiceId" 
                                                           value="@service.Id" 
                                                           id="service_@service.Id"
                                                           class="service-radio"
                                                           onchange="selectService(@service.Id, '@service.Name')"
                                                           required>
                                                    <label for="service_@service.Id" class="service-card @service.Color">
                                                        <div class="service-icon">
                                                            <span class="fs-1">@service.IconDisplay</span>
                                                        </div>
                                                        <div class="service-info">
                                                            <h6 class="service-name">@service.Name</h6>
                                                            <p class="service-desc">@service.Description</p>
                                                        </div>
                                                        <div class="service-check">
                                                            <i class="fas fa-check-circle"></i>
                                                        </div>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <span asp-validation-for="NewOrder.ServiceId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Menu Selection -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-pink text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-birthday-cake me-2"></i>
                                        Pilih Menu
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row" id="menuItems">
                                        @foreach (var item in Model.MenuItems.Where(m => m.IsAvailable))
                                        {
                                            <div class="col-md-6 col-lg-4 mb-4">
                                                <div class="menu-card">
                                                    <div class="menu-image">
                                                        <img src="@item.ImageUrl" alt="@item.Name" 
                                                             onerror="this.src='https://images.unsplash.com/photo-1578985545062-69928b1d9587?w=300&h=200&fit=crop&crop=center'">
                                                        <div class="menu-category">@item.Category</div>
                                                    </div>
                                                    <div class="menu-info">
                                                        <h6 class="menu-name">@item.Name</h6>
                                                        <p class="menu-desc">@item.Description</p>
                                                        <div class="menu-price">Rp @item.Price.ToString("N0")</div>
                                                        <div class="menu-actions">
                                                            <div class="quantity-control">
                                                                <button type="button" class="btn btn-sm btn-outline-pink" 
                                                                        onclick="decreaseQuantity(@item.Id)">-</button>
                                                                <input type="number" 
                                                                       id="qty_@item.Id" 
                                                                       class="quantity-input" 
                                                                       value="0" 
                                                                       min="0" 
                                                                       max="10"
                                                                       onchange="updateQuantity(@item.Id, this.value, @item.Price)">
                                                                <button type="button" class="btn btn-sm btn-outline-pink" 
                                                                        onclick="increaseQuantity(@item.Id)">+</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Order Summary & Customer Info -->
                        <div class="col-lg-4">
                            <div class="sticky-top" style="top: 20px;">
                                <!-- Order Summary -->
                                <div class="card shadow-sm mb-4" id="orderSummaryCard">
                                    <div class="card-header bg-pink text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-receipt me-2"></i>
                                            Ringkasan Pesanan
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div id="selectedService" class="mb-3" style="display: none;">
                                            <div class="d-flex align-items-center">
                                                <span class="service-icon-small me-2" id="selectedServiceIcon"></span>
                                                <div>
                                                    <strong id="selectedServiceName">Pilih Layanan</strong>
                                                    <br>
                                                    <small class="text-muted">Layanan yang dipilih</small>
                                                </div>
                                            </div>
                                            <hr>
                                        </div>
                                        
                                        <div id="orderItems">
                                            <div class="text-center text-muted py-3">
                                                <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                                                <p>Belum ada item dipilih</p>
                                            </div>
                                        </div>
                                        
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <strong>Total:</strong>
                                            <strong class="text-pink" id="totalAmount">Rp 0</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- Customer Information -->
                                <div class="card shadow-sm">
                                    <div class="card-header bg-pink text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-user me-2"></i>
                                            Informasi Pelanggan
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="NewOrder.CustomerName" class="form-label"></label>
                                            <input asp-for="NewOrder.CustomerName" class="form-control" placeholder="Nama lengkap">
                                            <span asp-validation-for="NewOrder.CustomerName" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="NewOrder.PhoneNumber" class="form-label"></label>
                                            <input asp-for="NewOrder.PhoneNumber" class="form-control" placeholder="08xxxxxxxxxx">
                                            <span asp-validation-for="NewOrder.PhoneNumber" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="NewOrder.Email" class="form-label"></label>
                                            <input asp-for="NewOrder.Email" class="form-control" placeholder="email@example.com (opsional)">
                                            <span asp-validation-for="NewOrder.Email" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="NewOrder.DeliveryAddress" class="form-label"></label>
                                            <textarea asp-for="NewOrder.DeliveryAddress" class="form-control" rows="3" placeholder="Alamat lengkap (wajib untuk delivery, opsional untuk dine in/take away)"></textarea>
                                            <span asp-validation-for="NewOrder.DeliveryAddress" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="NewOrder.OrderDateTime" class="form-label">
                                                <i class="fas fa-calendar-alt me-1"></i>
                                                Tanggal & Waktu Pengambilan/Pengiriman
                                            </label>
                                            <input asp-for="NewOrder.OrderDateTime" class="form-control" type="datetime-local" 
                                                   value="@DateTime.Now.AddHours(2).ToString("yyyy-MM-ddTHH:mm")"
                                                   min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                                                   step="60"
                                                   pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}">
                                            <span asp-validation-for="NewOrder.OrderDateTime" class="text-danger"></span>
                                            <small class="form-text text-muted">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Minimal 2 jam dari sekarang. Waktu dalam format 24 jam (WIB).
                                            </small>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="NewOrder.Notes" class="form-label"></label>
                                            <textarea asp-for="NewOrder.Notes" class="form-control" rows="3" placeholder="Catatan khusus (opsional)"></textarea>
                                            <span asp-validation-for="NewOrder.Notes" class="text-danger"></span>
                                        </div>
                                        
                                        <button type="submit" class="btn btn-pink w-100" id="submitOrder" disabled>
                                            <i class="fas fa-paper-plane me-2"></i>
                                            Kirim Pesanan
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    
    <script>
        let selectedItems = {};
        let totalAmount = 0;
        let selectedServiceId = null;
        let selectedServiceName = '';

        // Menu items data
        const menuItems = @Html.Raw(Json.Serialize(Model.MenuItems.Where(m => m.IsAvailable).Select(m => new { m.Id, m.Name, m.Price })));

        @if (Model.IsOrderCompleted && Model.CompletedOrder != null)
        {
            <text>
            // Order data for completed order
            const completedOrderData = {
                id: '@Model.CompletedOrder.Id.ToString("D6")',
                customerName: '@Html.Raw(Model.CompletedOrder.CustomerName?.Replace("'", "\\'"))',
                phoneNumber: '@Model.CompletedOrder.PhoneNumber',
                email: '@Model.CompletedOrder.Email',
                serviceName: '@Model.CompletedOrder.Service?.Name',
                serviceIcon: '@Model.CompletedOrder.Service?.IconDisplay',
                deliveryAddress: '@Html.Raw(Model.CompletedOrder.DeliveryAddress?.Replace("'", "\\'"))',
                orderDateTime: '@Model.CompletedOrder.OrderDateTime.ToString("dd/MM/yyyy HH:mm")',
                createdAt: '@Model.CompletedOrder.CreatedAt.ToString("dd/MM/yyyy HH:mm")',
                notes: '@Html.Raw(Model.CompletedOrder.Notes?.Replace("'", "\\'"))',
                totalAmount: '@Model.CompletedOrder.TotalAmount.ToString("N0")',
                items: [
                    @foreach (var item in Model.CompletedOrder.OrderItems)
                    {
                        <text>{
                            name: '@Html.Raw(item.MenuItem?.Name?.Replace("'", "\\'"))',
                            quantity: @item.Quantity,
                            unitPrice: '@item.UnitPrice.ToString("N0")',
                            totalPrice: '@item.TotalPrice.ToString("N0")',
                            notes: '@Html.Raw(item.Notes?.Replace("'", "\\'"))'
                        },</text>
                    }
                ]
            };</text>
        }

        // Functions that work for both states
        function printReceipt() {
            @if (Model.IsOrderCompleted && Model.CompletedOrder != null)
            {
                <text>
                // Create items HTML for completed order
                let itemsHtml = '';
                completedOrderData.items.forEach(item => {
                    if (item.name) {
                        itemsHtml += `
                            <tr>
                                <td style="padding: 5px 2px; border-bottom: 1px dotted #ccc;">
                                    <strong>${item.name}</strong>
                                    ${item.notes ? `<br><small>Note: ${item.notes}</small>` : ''}
                                </td>
                                <td style="padding: 5px 2px; text-align: center; border-bottom: 1px dotted #ccc;">${item.quantity}</td>
                                <td style="padding: 5px 2px; text-align: right; border-bottom: 1px dotted #ccc;">Rp ${item.unitPrice}</td>
                                <td style="padding: 5px 2px; text-align: right; border-bottom: 1px dotted #ccc;"><strong>Rp ${item.totalPrice}</strong></td>
                            </tr>
                        `;
                    }
                });
                
                const printContent = `
                    <html>
                    <head>
                        <title>Struk Pesanan #${completedOrderData.id} - Cakenuy</title>
                        <style>
                            body { 
                                font-family: 'Courier New', monospace; 
                                margin: 20px; 
                                font-size: 12px;
                                line-height: 1.4;
                                max-width: 400px;
                            }
                            .text-center { text-align: center; }
                            .border-bottom { border-bottom: 2px solid #333; padding-bottom: 10px; margin-bottom: 15px; }
                            .border-top { border-top: 2px solid #333; padding-top: 15px; margin-top: 15px; }
                            .dotted-line { border-bottom: 1px dotted #333; margin: 10px 0; }
                            .info-row { 
                                display: flex; 
                                justify-content: space-between; 
                                margin-bottom: 5px;
                                padding-bottom: 3px;
                            }
                            .info-label { font-weight: bold; }
                            table { 
                                width: 100%; 
                                border-collapse: collapse; 
                                margin: 10px 0;
                            }
                            th { 
                                font-weight: bold; 
                                border-bottom: 2px solid #333;
                                padding: 5px 2px;
                                font-size: 11px;
                            }
                            .header {
                                text-align: center;
                                margin-bottom: 20px;
                                padding-bottom: 15px;
                                border-bottom: 2px solid #333;
                            }
                            .footer {
                                text-align: center;
                                margin-top: 20px;
                                padding-top: 15px;
                                border-top: 2px solid #333;
                                font-size: 10px;
                            }
                            h2 { font-size: 18px; margin: 5px 0; }
                            h3 { font-size: 14px; margin: 5px 0; }
                            h4 { font-size: 12px; margin: 5px 0; }
                            .print-date { 
                                text-align: right; 
                                font-size: 10px; 
                                margin-bottom: 15px; 
                            }
                            .section-title {
                                font-weight: bold;
                                margin: 15px 0 8px 0;
                                text-transform: uppercase;
                                font-size: 11px;
                                letter-spacing: 1px;
                            }
                        </style>
                    </head>
                    <body>
                        <div class="print-date">Dicetak: ${new Date().toLocaleString('id-ID')}</div>
                        
                        <div class="header">
                            <h2>CAKENUY</h2>
                            <h3>STRUK PESANAN</h3>
                            <h4>Order #${completedOrderData.id}</h4>
                            <div>${new Date().toLocaleString('id-ID')} WIB</div>
                        </div>

                        <div class="section-title">INFORMASI PELANGGAN</div>
                        <div class="info-row">
                            <span class="info-label">Nama:</span>
                            <span>${completedOrderData.customerName}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">No. HP:</span>
                            <span>${completedOrderData.phoneNumber}</span>
                        </div>
                        ${completedOrderData.email ? `
                        <div class="info-row">
                            <span class="info-label">Email:</span>
                            <span>${completedOrderData.email}</span>
                        </div>` : ''}
                        <div class="info-row">
                            <span class="info-label">Layanan:</span>
                            <span>${completedOrderData.serviceIcon} ${completedOrderData.serviceName}</span>
                        </div>
                        ${completedOrderData.deliveryAddress ? `
                        <div class="info-row">
                            <span class="info-label">Alamat:</span>
                            <span>${completedOrderData.deliveryAddress}</span>
                        </div>` : ''}

                        <div class="dotted-line"></div>

                        <div class="section-title">INFORMASI PESANAN</div>
                        <div class="info-row">
                            <span class="info-label">Tgl Pesan:</span>
                            <span>${completedOrderData.createdAt}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Tgl Ambil/Kirim:</span>
                            <span>${completedOrderData.orderDateTime}</span>
                        </div>
                        ${completedOrderData.notes ? `
                        <div class="info-row">
                            <span class="info-label">Catatan:</span>
                            <span>${completedOrderData.notes}</span>
                        </div>` : ''}

                        <div class="dotted-line"></div>

